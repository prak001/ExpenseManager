<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.welcome.expensemanager.CreditDebitActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creditID"
        android:layout_marginTop="92dp"
        android:width="220dp"
        android:textSize="30dp"
        android:hint="CREDIT"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numeric="integer" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/debitID"
        android:width="220dp"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="DEBIT"
        android:numeric="integer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs"
        android:id="@+id/textView"
        android:width="50dp"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/creditID"
        android:layout_toStartOf="@+id/creditID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs"
        android:id="@+id/textView2"
        android:width="50dp"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/debitID"
        android:layout_toStartOf="@+id/debitID" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/updateID"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/debitID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noEnoughBalID"
        android:width="300dp"
        android:textSize="20dp"
        android:textColor="#e91212"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="45dp" />

</RelativeLayout>
