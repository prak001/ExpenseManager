<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_date">
    <TextView
        android:layout_weight="1"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID = "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        />

    <TextView
        android:layout_weight="1"
        android:id="@+id/textViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserID"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView1"
        android:visibility="gone"
        />



    <TextView
        android:layout_weight="4"
        android:id="@+id/textViewDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/textView8" />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewCREDIT_DEBIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="credit_debit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Amt. = "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@id/layout_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewPREVIOUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewTRANSACTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transaction"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Amt. = "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textViewCREDIT_DEBIT"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:id="@+id/textViewNEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="newAmt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textViewTRANSACTION"
        android:layout_alignEnd="@+id/textViewPREVIOUS" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM/TO. = "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textViewCREDIT_DEBIT" />

    <TextView
        android:id="@+id/textViewFROM_TO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fromto"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/textViewTRANSACTION" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Detail. = "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/textViewFULLdet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fulldetail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:layout_below="@+id/textViewFROM_TO"
        android:layout_alignStart="@+id/textViewNEW" />

</RelativeLayout>