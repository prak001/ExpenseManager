<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.welcome.expensemanager.FillDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textCDID"
        android:width="220dp"
        android:textSize="30dp"
        android:layout_below="@+id/dateID"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/dateID"
        android:width="200dp"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textCDID"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/fromToID"
        android:layout_below="@+id/textCDID"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:width="120dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignTop="@+id/fromToID"
        android:layout_alignParentEnd="true"
        android:width="200dp"
        android:maxLines="2"
        android:maxLength="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:width="120dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="New Text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText5"
        android:width="200dp"
        android:maxLength="57"
        android:maxLines="5"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/editText4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finalOK"
        android:layout_marginTop="69dp"
        android:width="60dp"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:text="OK" />

</RelativeLayout>
